{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.tests.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "./dist-tests",
		"types": ["node", "jest"],
		"baseUrl": "../..",
		"paths": {
			"@wpkernel/test-utils/*": ["packages/test-utils/dist/*"],
			"@wpkernel/test-utils": ["packages/test-utils/dist/index.d.ts"]
		}
	},
	"include": [
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/__tests__/**/*.ts",
		"src/**/__tests__/**/*.tsx",
		"tests/**/*",
		"../../types/**/*.d.ts",
		"../test-utils/dist/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"dist-tests",
		"**/dist",
		"**/*.test-support.d.ts"
	],
	"references": [{ "path": "./tsconfig.json" }, { "path": "../php-json-ast" }]
}
