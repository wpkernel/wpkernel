{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.tests.cli.json",
	"compilerOptions": {
		"rootDir": "../..",
		"skipLibCheck": true,
		"composite": false
	},
	"include": [
		"src/**/*.test.ts",
		"src/**/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"src/**/test-support/**/*.ts",
		"src/tests/**/*.ts",
		"tests/jest.setup.ts",
		"vite.config.ts",
		"./package.json",
		"../../layout.manifest.json"
	],
	"references": [
		{ "path": "./tsconfig.json" },
		{ "path": "../core/tsconfig.json" },
		{ "path": "../php-json-ast/tsconfig.json" },
		{ "path": "../test-utils/tsconfig.json" },
		{ "path": "../ui/tsconfig.json" },
		{ "path": "../e2e-utils/tsconfig.json" }
	]
}
