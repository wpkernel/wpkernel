{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/",
	"preferredVersions": {
		"php": "8.3",
		"wp": "6.8.3"
	},
	"features": {
		"networking": true
	},
	"login": true,
	"plugins": [
		{
			"resource": "url",
			"url": "https://github.com/WP-API/Basic-Auth/archive/refs/heads/master.zip",
			"caption": "REST API Basic Auth plugin"
		}
	],
	"steps": [
		{
			"step": "defineWpConfigConsts",
			"consts": {
				"WP_DEBUG": true,
				"WP_DEBUG_LOG": true,
				"WP_DEBUG_DISPLAY": false
			}
		},
		{
			"step": "setSiteOptions",
			"options": {
				"permalink_structure": "/%postname%/"
			}
		},
		{
			"step": "runPHP",
			"code": "flush_rewrite_rules();"
		},
		{
			"step": "runPHP",
			"code": "update_option('users_can_register', 0); delete_option('playground_auto_login_already_happened');"
		},
		{
			"step": "activatePlugin",
			"pluginPath": "showcase-plugin/plugin.php"
		}
	]
}
